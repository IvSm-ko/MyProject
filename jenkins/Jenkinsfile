pipeline {
    agent any
    tools {
        jdk 'JDK'
        maven 'mvn'
        git 'Default'
    }
    stages {
        stage('Testing Java') {
            steps {
                sh 'mvn clean'
                sh 'mvn test'
            }
        }
//         stage('build') {
//             steps {
//                 sh 'pip install -r requirements.txt'
//             }
        // }
//         stage ('Testing Python'){
//             steps {
//                 sh 'python unit-test.py'
//             }
//          
        stage ('Testing Python'){
            steps {
                echo '--- Creating Python3 Virtual Environment ---'
                sh 'printenv'
                sh '''python3 -m venv .env
                    echo \'--- Activating Virtual Environmet ---\'
                    . $WORKSPACE/env/bin/activate'''
                echo '--- Installing requirements ---'
                sh'''. $WORKSPACE/env/bin/activate
                    pip3 install -r ./bwg-cli/requirements.txt
                    cd /var/lib/jenkins/workspace/$JOB_NAME/'''
                echo '--- Starting Tests ---'
                sh'''. $WORKSPACE/env/bin/activate
                    pytest ./bwg-cli/test --junitxml=./Report/output.xml
                    echo \'--- Deaktivating Virtual Environment ---\'
                    deactivate'''
            }
        }
    }
}
